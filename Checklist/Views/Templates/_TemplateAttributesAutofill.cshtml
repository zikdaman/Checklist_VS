@model Checklist.Models.TemplateAttribute

@using (Html.BeginCollectionItem("TemplateAttributes"))
{
    <div class="form-group row">
        @Html.HiddenFor(m=> m.TemplateAttributeID)
        @Html.HiddenFor(m=> m.TemplateID)
        @Html.HiddenFor(m=> m.TemplateAttributeType)
        @Html.HiddenFor(m=> m.TemplateAttributeOrder)
        <label class="control-label col-md-2">@Html.DisplayFor(m=> m.TemplateAttributeType)</label>
        <span class="col-md-10">
            @Html.EditorFor(m => m.TemplateAttributeName, new { htmlAttributes = new { @class = "form-control", @placeholder="Enter Attribute Label" } })
            @Html.ValidationMessageFor(m => m.TemplateAttributeName, "", new { @class = "text-danger" })
        </span>
    </div>
}

